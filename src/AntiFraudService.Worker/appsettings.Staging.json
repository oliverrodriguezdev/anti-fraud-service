{
  "ConnectionStrings": {
    "DefaultConnection": "Host=staging-db;Port=5432;Database=antifraud_db;Username=postgres;Password=${DB_PASSWORD}"
  },
  "Kafka": {
    "BootstrapServers": "staging-kafka:9092",
    "ConsumerGroupId": "antifraud-consumer-group-staging",
    "Topics": {
      "Transactions": "transactions",
      "TransactionStatus": "transactions-status"
    }
  },
  "WorkerSettings": {
    "ProcessingDelay": 500,
    "MaxRetryAttempts": 5,
    "BatchSize": 20,
    "EnableDetailedLogging": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "AntiFraudService.Worker": "Information"
    }
  }
} 