{
  "ConnectionStrings": {
    "DefaultConnection": "Host=staging-db;Port=5432;Database=antifraud_db;Username=postgres;Password=${DB_PASSWORD}"
  },
  "Kafka": {
    "BootstrapServers": "staging-kafka:9092"
  },
  "ApiSettings": {
    "Port": 5000,
    "HttpsPort": 5001,
    "SwaggerEnabled": false,
    "CorsEnabled": true,
    "RateLimiting": {
      "Enabled": true,
      "MaxRequestsPerMinute": 1000
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "staging.antifraud.com"
} 